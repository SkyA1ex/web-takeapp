@font-face
  font-family OpenSansLight
  font-style normal
  src url(../fonts/OpenSans-Light.ttf)

@font-face
  font-family OpenSansRegular
  font-style normal
  src url(../fonts/OpenSans-Regular.ttf)

@font-face
  font-family OpenSansSemibold
  font-style normal
  src url(../fonts/OpenSans-Semibold.ttf)

@font-face
  font-family OpenSansBold
  font-style normal
  src url(../fonts/OpenSans-Bold.ttf)

@font-face
  font-family OpenSansExtraBold
  font-style normal
  src url(../fonts/OpenSans-ExtraBold.ttf)

@font-face
  font-family OpenSansItalic
  font-style normal
  src url(../fonts/OpenSans-Italic.ttf)

@font-face
  font-family FontAwesome
  src url('../fonts/fontawesome-webfont.eot?v=4.7.0')
  src url('../fonts/fontawesome-webfont.eot?#iefix&v=4.7.0') format('embedded-opentype'), url('../fonts/fontawesome-webfont.woff2?v=4.7.0') format('woff2'), url('../fonts/fontawesome-webfont.woff?v=4.7.0') format('woff'), url('../fonts/fontawesome-webfont.ttf?v=4.7.0') format('truetype'), url('../fonts/fontawesome-webfont.svg?v=4.7.0#fontawesomeregular') format('svg')
  font-weight normal
  font-style normal


body
  margin 0px
  padding 0px


.brand-label
  position absolute
  transform rotate(270deg)
  font 12px OpenSansSemibold
  left 33px
  overflow hidden

  @media screen and (max-width: 1500px)
    display none

.link-with-arrow
  display inline-block
  color white
  font 14px OpenSansBold

  &:hover
    cursor pointer


.layout-header
  // display none // TODO: remove
  height 950px
  background url(/img/man.jpg) no-repeat center

  .brand-label
    top 505px
    color white

  .brand-label_perfect
    left 50px
    top 585px
    color white
    font 12px OpenSansLight

  .content
    display relative
    margin 0px
    margin-right auto
    margin-left auto
    max-width 1300px
    padding-left 50px
    padding-right 50px

    .app_label
      display flex
      flex-flow row nowrap
      align-items center
      padding-top 55px

      .app_logo_container
        height 40px
        width 40px

        .app_logo
          max-width 100%
          max-height 100%

      .app_name
        font 22px OpenSansItalic
        color white
        padding-left 10px

    .title
      font 60px OpenSansLight
      color white
      padding-top 395px

    .text
      max-width 450px
      font 13px OpenSansRegular
      color white
      margin-top 20px
      line-height 1.5


.layout-main
  background-color white

  .brand-label
    display none // TODO: fix
    bottom 100px
    color #b8b8b8

  .content
    display block
    margin-right auto
    margin-left auto
    max-width 1300px
    padding-left 50px
    padding-right 50px
    margin-top 120px
    margin-bottom 160px

    .start-something-new
      display block

      .title
        display inline-block
        color #222626
        font 35px OpenSansLight

      .items
        display flex
        flex-flow row wrap
        align-items flex-start
        justify-content space-between
        align-content space-between
        margin-top 10px

        .item
          flex 1 1 45%
          max-width 600px
          min-width 300px
          color #959595
          font 14px OpenSansRegular
          padding-right 25px
          margin-top 25px

          &_right
            margin-top 100px

            @media screen and (max-width: 749px)
              margin-top 25px

    .grid
      display flex
      flex-flow row wrap
      justify-content center
      // align-items flex-start // TODO: replace by stretch?
      // align-content flex-start
      margin-top 80px
      padding-left 50px
      padding-right 50px

      .grid-card
        flex 0 0 33.33%
        display block
        position relative
        padding-top 50px
        padding-bottom 40px
        min-height 200px

        &_doubled
          flex 0 0 66.66%

        &_pink
          background #F3989E

        &_purple
          background #61607C

        &_pic1
          background-size cover
          background url(/img/pic1.jpg) no-repeat center center

        &_pic2
          background-size cover
          background url(/img/pic2.jpg) no-repeat center center

        &_green
          background #84C99D

        .grid-card__title
          color white
          font 30px OpenSansLight
          padding-left 40px
          padding-right 40px

        .grid-card__text
          margin-top 25px
          color white
          font 13px OpenSansRegular
          padding-left 40px
          padding-right 40px
          margin-bottom 50px

        .grid-card__link
          position absolute
          bottom 55px
          padding-left 40px
          padding-right 40px

        .grid_card__like-icon
          font-size 4em
          content "\f000"
          padding-left 40px
          padding-right 40px


    .details
      margin-top 100px

      .title
        display inline-block
        font 35px OpenSansLight
        color #222626

      .details-list
        display flex
        flex-flow row wrap
        align-items flex-stary
        justify-content space-between
        align-content space-between
        margin-top 20px

        .details-item
          display block
          max-width 300px
          min-width 150px
          margin-top 40px

        .details-item__title
          font 13px OpenSansSemibold
          color #67676d

        .details-item__text
          font 14px OpenSansRegular
          color #959595
          padding-right 25px
          margin-top 25px



.layout_more_power
  height 875px
  background url(/img/car.jpg) no-repeat center, white // TODO: made black, fix gradient

  .gradient
    position absolute
    height 100%
    width 700px
    background linear-gradient(to right, rgba(0, 0, 0, 0.5), rgba(0, 0, 0, 0.3), rgba(0, 0, 0, 0))

  .content
    display block
    margin 0px
    margin-right auto
    margin-left auto
    max-width 1300px
    padding-left 50px
    padding-right 50px

    .info
      overflow visible
      position relative
      top 455px
      color #FFFFFF
      max-width 500px

      .title
        font 60px OpenSansLight
        line-height 1.2

      .text
        font 13px OpenSansRegular
        margin-top 30px
        margin-right 50px
        line-height 1.7

      .options
        display inline-block
        margin-top 25px
        font 14px OpenSansBold

        &:hover
          cursor pointer



.layout_reasons
  // display none // TODO: remove
  position relative
  background-color #82ca9c
  color #FFFFFF
  padding-top 120px
  padding-bottom 160px

  .brand-label
    top 165px
    color white

  .content
    display block
    margin-right auto
    margin-left auto
    max-width 1300px
    padding-left 50px
    padding-right 50px

    .title
      display block
      font 35px OpenSansLight

    .list
      display flex
      flex-flow row wrap
      justify-content space-between
      align-items flex-start
      margin-top 50px

      .item
        flex-basis auto // default
        flex-grow 1
        flex-basis 360px
        max-width 360px
        margin-bottom 30px

        .header
          font 13px OpenSansSemibold


        .text
          margin-top 25px
          font 14px OpenSans



.card-plan
  display inline-block
  max-width 500px
  padding-top 50px
  padding-bottom 55px
  padding-left 50px
  padding-right 50px

  &:hover
    background white
    box-shadow 0 0 62px rgba(0, 0, 0, 0.05)

  .card-plan__label
    display inline-block
    border-radius 5px
    color white
    font 11px OpenSansExtraBold
    padding-top 4px
    padding-bottom 4px
    padding-left 16px
    padding-right 16px

    &_legacy
      background-color #E1E1E1

    &_most-popular
      background-color #BB8CBD

  .card-plan__name
    font 30px OpenSansLight
    color #2e3b4e
    margin-top 10px

  .card-plan__description
    font 14px OpenSansRegular
    color #8297a7
    margin-top 25px
    padding-right 50px

    @media screen and (max-width: 1299px)
      padding-right 0px

  .card-plan__buy-now
    display inline-block
    border-radius 3px
    background-color #82ca9c
    font 13px OpenSansBold
    color white
    margin-top 30px
    padding-top 16px
    padding-bottom 16px
    padding-left 26px
    padding-right 26px
    text-transform uppercase

    &:hover
      cursor pointer

  .card-plan__icons
    display flex
    flex-flow row nowrap
    margin-top 18px

    .card-plan__icon
      width 25px
      height 25px

      &_apple
        margin-right 12px
        background url(/img/icon_apple.png) no-repeat center

      &_windows
        background url(/img/icon_windows.png)  no-repeat center




.layout-plan
  // display none // TODO: remove
  position relative
  background-color #f6f7fa
  padding-top 100px
  padding-bottom 140px

  .brand-label
    color #b8b8b8
    top 145px

  .content
    display flex
    flex-flow row wrap
    justify-content center
    align-content flex-start
    margin-right auto
    margin-left auto
    max-width 1300px
    padding-left 50px
    padding-right 50px




.subscription-input-form
  position relative
  width 300px

  .subscription-input-form__email
    display inline-block
    width 260px
    height 40px
    background-color white
    outline none
    border none
    color rgba(0, 0, 0, 0.8)
    padding-left 4px
    padding-right 4px
    padding 10px
    font 14px OpenSansRegular

  .subscription-input-form__button-done
    display block
    position absolute
    right 0px
    top 0px
    background url(/img/icon_button_done.png) no-repeat center, #82ca9c
    width 40px
    height 40px
    cursor pointer


.layout-footer
  padding-top 128px
  padding-bottom 150px
  background-color #192431

  @media screen and (max-width: 699px)
    padding-top 50px
    padding-bottom 50px

  .row-1
    display flex
    flex-flow row wrap
    justify-content flex-start
    align-items flex-start
    padding-left 50px
    padding-right 50px
    max-width 1300px
    margin-right auto
    margin-left auto

    .get-in-touch
      flex-grow 1
      flex-basis 0
      padding-right 50px
      min-width 250px
      max-width 550px

      .get-in-touch__title
        font 13px OpenSansSemibold
        color #f6f7fa

      .get-in-touch__description
        font 13px OpenSansRegular
        color #f6f7fa
        margin-top 30px

    .subscribtion
      flex-grow 1
      flex-basis 0

      @media screen and (max-width: 699px)
        margin-top 40px

      .subscribtion__title
        font 13px OpenSansSemibold
        color #f6f7fa

      .subscription-input-form
        margin-top 30px

      .subscribtion__no-spam
        display inline-block
        color #57697f
        width 270px
        font 12px OpenSansRegular
        margin-top 6px



  .links
    display flex
    flex-flow row wrap
    justify-content flex-start
    align-items flex-start
    padding-left 50px
    padding-right 50px
    max-width 1300px
    margin-right auto
    margin-left auto
    margin-top 40px

    .links-column
      display flex
      flex-flow column nowrap
      align-items flex-start
      padding-right 80px

      @media screen and (max-width: 650px)
        padding-right 20px
        margin-right 0px

      .links-column__title
        display inline-block
        font 13px OpenSansSemibold
        color #f6f7fa
        margin-bottom 25px
        cursor pointer

      .links-column__item
        display inline-block
        font 13px OpenSansRegular
        color #f6f7fa
        padding-bottom 2px
        cursor pointer

        &:last-of-type
          padding-bottom 2px







